<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="enoq">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  
<!--   <property name="hibernate.connection.password">root</property> -->
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/shopper</property>
  
<!--   <property name="hibernate.connection.password">k5idjzVV-fd8</property>  -->
<!--   <property name="hibernate.connection.username">adminr9sIYAN</property> -->
<!--   <property name="hibernate.connection.url">jdbc:mysql://127.6.156.2:3306/shopper</property> -->
  
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.show_sql">false</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <property name="hibernate.connection.autocommit">true</property>
  <mapping resource="shopper/User.hbm.xml"/>
  <mapping resource="shopper/Event.hbm.xml"/>
  <mapping resource="shopper/EventComment.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
